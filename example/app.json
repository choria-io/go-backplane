{
   "$schema": "https://choria.io/schemas/mcorpc/ddl/v1/agent.json",
   "metadata": {
      "license": "Apache-2.0",
      "author": "R.I.Pienaar \u003crip@devco.net\u003e",
      "timeout": 10,
      "name": "app",
      "version": "0.0.1",
      "url": "https://choria.io",
      "description": "Choria Management Backplane"
   },
   "actions": [
      {
         "action": "ping",
         "input": {},
         "output": {
            "version": {
               "description": "The version of the Choria Backplane system in use",
               "display_as": "Choria Backplane",
               "default": "0.0.0"
            }
         },
         "display": "failed",
         "description": "Backplane communications test"
      },
      {
         "action": "info",
         "input": {},
         "output": {
            "backplane_version": {
               "description": "Version of the Choria Backplane",
               "display_as": "Choria Backplane",
               "default": null
            },
            "facts": {
               "description": "Application Facts",
               "display_as": "Facts",
               "default": {}
            },
            "facts_feature": {
               "description": "If the InfoSource interface is used",
               "display_as": "Facts Feature",
               "default": null
            },
            "health_feature": {
               "description": "If the HealthCheckable interface is used",
               "display_as": "Health Feature",
               "default": null
            },
            "healthy": {
               "description": "Health Status",
               "display_as": "Healthy",
               "default": null
            },
            "pause_feature": {
               "description": "If the Pausableable interface is used",
               "display_as": "Circuit Breaker Feature",
               "default": null
            },
            "paused": {
               "description": "Paused State",
               "display_as": "Paused",
               "default": null
            },
            "shutdown_feature": {
               "description": "If the Stopable interface is used",
               "display_as": "Shutdown Feature",
               "default": null
            },
            "version": {
               "description": "Application Version",
               "display_as": "Version",
               "default": null
            }
         },
         "display": "always",
         "description": "Information about the managed service"
      },
      {
         "action": "shutdown",
         "input": {},
         "output": {
            "delay": {
               "description": "How long after running the action the shutdown will be initiated",
               "display_as": "Delay",
               "default": ""
            }
         },
         "display": "failed",
         "description": "Terminates the managed service"
      },
      {
         "action": "health",
         "input": {},
         "output": {
            "healthy": {
               "description": "Status indicator for the checked service",
               "display_as": "Healthy",
               "default": false
            },
            "result": {
               "description": "The result from the check method",
               "display_as": "Result",
               "default": ""
            }
         },
         "display": "failed",
         "description": "Checks the health of the managed service"
      },
      {
         "action": "pause",
         "input": {},
         "output": {
            "paused": {
               "description": "Paused State",
               "display_as": "Paused",
               "default": false
            }
         },
         "display": "always",
         "description": "pause"
      },
      {
         "action": "resume",
         "input": {},
         "output": {
            "paused": {
               "description": "Paused State",
               "display_as": "Paused",
               "default": false
            }
         },
         "display": "always",
         "description": "resume"
      },
      {
         "action": "flip",
         "input": {},
         "output": {
            "paused": {
               "description": "Paused State",
               "display_as": "Paused",
               "default": false
            }
         },
         "display": "always",
         "description": "flip"
      }
   ]
}